<link rel="stylesheet" href="~/css/dashboard.css">
@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meu Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <style>
        /* CSS Customizado */
        .bg-primary {
            background-color: #184DAB !important;
        }

        .card-custom {
            background-color: #184DAB;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="">
        <div class="d-flex" style="height: 100vh;">
            <!-- Barra lateral -->
            <div class="bg-primary text-white p-3" style="width: 250px; background-color: #184DAB; margin-top: 2%; height: 96.5vh;">
                <h2 class="mb-4">Menu</h2>
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a href="/Colaborador/Categoria/Index" class="nav-link text-white">
                            @* Aqui o Caminho dos ícones *@
                            <i class="fas fa-tachometer-alt"></i> Categorias
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/Colaborador/Produto/Index" class="nav-link text-white">
                            @* Aqui o Caminho dos ícones *@
                            <i class="fas fa-box"></i> Produtos
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/Colaborador/Home/Painel" class="nav-link text-white">
                            @* Aqui o Caminho dos ícones *@
                            <i class="fas fa-users"></i> Colaborador
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a href="/Colaborador/Home/Login" class="nav-link text-white">
                            @* Aqui o Caminho dos ícones *@
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Conteúdo principal -->
            <div class="flex-grow-1 p-3" style=" height: 80vh">
                <header class="mb-4" style="margin-top: 2%">
                    <h1 class="text-primary">Meu Dashboard</h1>
                </header>
                <div class="row" style=" height: 80vh; display: flex; align-items: center; justify-content: center; flex-direction: column;">
                    <div class="col-md-3">
                        <div class="card card-custom mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Cad Produtos</h5>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card card-custom mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Cad Categoria</h5>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card card-custom mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Produto Vendidos</h5>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card card-custom mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Novos Cadastros</h5>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
