@model IEnumerable<Site_SmartComfort.Models.Produto>

@{
    ViewData["Title"] = "Favoritos";
}
<link rel="stylesheet" href="~/css/favorito.css">


<head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>

<body>
    <div class="org">
        <div class="org-text">
            <div class="fav">
                <h1><i class="fas fa-heart"></i> FAVORITOS</h1>
            </div>
            <div class="container-itens">
                @foreach (var produto in Model)
                {
                    <div class="container-item">
                        <div class="container-imagem">
                            <img src="@produto.ImgUrlPro" alt="">
                        </div>
                        <div class="container-textos">
                            <div class="container-text">
                                <p>@produto.NomePro, @produto.Voltagem</p>
                            </div>
                            <div class="container-price">
                                <h2>R$@produto.PrecoPro</h2>
                            </div>
                            <div class="container-button">
                                <button><a asp-controller="Produto" asp-action="ProdutoClick" asp-route-id="">Visualizar</a></button>
                                <form asp-action="RemoverFavorito" method="post">
                                    <input type="hidden" name="Id" value="@produto.Id" />
                                    <button type="submit">Remover</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>